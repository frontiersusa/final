{
  "name": "press-css",
  "version": "5.2.2",
  "description": "Press is a collection of utility styles for Frontiers properties.",
  "main": "index.js",
  "scripts": {
    "start": "npm run clean && parcel src/index.html --port 1234",
    "build": "npm run clean && npm run build:styles && npm run build:docs",
    "build:styles": "parcel build src/css/index.css --out-file press.css",
    "build:docs": "parcel build src/index.html --public-url ./ -d docs",
    "watch": "parcel watch src/css/index.css --out-file press.css",
    "clean": "del-cli 'dist/index.html' && del-cli '.cache/**/*'",
    "deploy": "npm run clean && npm run build && sh deploy.sh"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/frotniersusa/press-css"
  },
  "author": "@natedunn",
  "license": "MIT",
  "devDependencies": {
    "del-cli": "^1.1.0",
    "parcel-bundler": "^1.11.0",
    "stylelint": "^9.10.1",
    "tailwindcss": "^0.7.4",
    "release-it": "10.1.0",
    "sanitize.css": "^8.0.0"
  },
  "dependencies": {
    "lodash": "^4.17.11",
    "postcss-easy-import": "^3.0.0",
    "postcss-fixie": "^2.0.0",
    "postcss-flexbugs-fixes": "^4.1.0",
    "postcss-focus": "^4.0.0",
    "postcss-font-magician": "^2.2.1",
    "postcss-import": "^12.0.1",
    "postcss-nesting": "^7.0.0",
    "postcss-preset-env": "^6.5.0",
    "postcss-pxtorem": "^4.0.1",
    "postcss-responsive-type": "^1.0.0",
    "tailwindcss": "^0.7.4",
    "tailwindcss-object-fit": "^1.0.1"
  },
  "browserslist": [
    "> 1% in my stats",
    "ie 10-11"
  ],
  "release-it": {
    "use": "pkg.version",
    "npm": {
      "publish": false
    },
    "github": {
      "release": true
    }
  }
}
