{
  "name": "final",
  "version": "3.0.7",
  "description": "Final is a collection of utility styles for Frontiers properties.",
  "repository": {
    "type": "git",
    "url": "https://github.com/natedunn/final"
  },
  "author": "@natedunn",
  "license": "ISC",
  "scripts": {
    "watch": "onchange 'src/*.css' -- npm run build",
    "serve": "browser-sync start --server --files 'dist/*.css, dist/*.js, index.html' --browser 'google chrome' --port '3000'",
    "minify": "postcss -u cssnano dist/final.css -o dist/final.min.css",
    "build:css": "postcss -c postcss.config.json",
    "build": "npm run build:css && npm run minify"
  },
  "devDependencies": {
    "browser-sync": "^2.18.8",
    "cssnano": "^3.7.1",
    "del-cli": "^0.2.0",
    "onchange": "^2.5.0",
    "postcss-cli": "^2.5.2",
    "postcss-cssnext": "^2.6.0",
    "postcss-custom-media": "^5.0.1",
    "postcss-easy-import": "^2.0.0",
    "postcss-import": "^8.1.2",
    "postcss-map": "^0.8.0",
    "postcss-pxtorem": "^4.0.0",
    "postcss-simple-vars": "^2.0.0"
  }
}
